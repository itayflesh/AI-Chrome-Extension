{
    "manifest_version": 2,
    "name": "AIEverywhere",
    "version": "1.0",
    "description": "Improves the selected text as if an English teacher wrote it",
    "permissions": [
      "contextMenus",
      "activeTab",
      "https://api.openai.com/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }